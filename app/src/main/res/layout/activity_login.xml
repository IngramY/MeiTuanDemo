<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                android:background="@color/backgroundcolor"
                tools:context="ruanyun.com.meituandemo.ui.login.LoginActivity" >

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <Button
            android:id="@+id/button_back_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="登录"
            android:textSize="18sp"
            android:textColor="@color/black2"
            android:textColorHighlight="@color/green"
            android:drawableLeft="@mipmap/takeout_ic_actionbar_back"
            android:background="@color/white"/>

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="注册"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <EditText
        android:id="@+id/edittext_login_username"
        android:background="@drawable/bg_edittext_login"
        android:hint="手机/邮箱/用户名"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/edittext_login_password"
        android:inputType="textPassword"
        android:background="@drawable/bg_edittext_login"
        android:hint="密码"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/button_login"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_login_password_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="找回密码" />
        <TextView
            android:id="@+id/textview_login_byphone"
            android:textColor="@color/green"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号快捷登录" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"  >
        <LinearLayout
            android:id="@+id/linearlayout_login2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_sina"
                android:src="@mipmap/ic_oauth_sina"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_baidu"
                android:src="@mipmap/ic_oauth_baidu"
                android:layout_alignParentBottom="true" />
            <ImageView
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_tencent"
                android:src="@mipmap/ic_oauth_tencent"
                android:layout_alignParentBottom="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_login1"
            android:layout_above="@id/linearlayout_login2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:background="@color/border_gray"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0.5dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用第三方帐号登录"
                android:textColor="@color/black"/>

            <View
                android:background="@color/border_gray"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0.5dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
